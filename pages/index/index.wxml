<view class="container">
  
  <!-- 计算结果 -->
  <view class="result-container">
    <text class="result">{{motto}}</text>
  </view>

  <!-- 计算器按钮 -->
  <view class="button-container">
  
    <view class="row">
      <button class="number" bindtap="onLoad">C</button>
      <button class="number" id="(" bindtap="pressOper">(</button>
      <button class="number" id=")" bindtap="pressOper">)</button>
      <button class="operator" id="/" bindtap="pressOper">/</button>
    </view>
  
    <view class="row">
      <button class="number" id="7" bindtap="pressNum">7</button>
      <button class="number" id="8" bindtap="pressNum">8</button>
      <button class="number" id="9" bindtap="pressNum">9</button>
      <button class="operator" id="×" bindtap="pressOper">×</button>
    </view>
  
    <view class="row">
      <button class="number" id="4" bindtap="pressNum">4</button>
      <button class="number" id="5" bindtap="pressNum">5</button>
      <button class="number" id="6" bindtap="pressNum">6</button>
      <button class="operator" id="-" bindtap="pressOper">-</button>
    </view>
  
    <view class="row">
      <button class="number" id="1" bindtap="pressNum">1</button>
      <button class="number" id="2" bindtap="pressNum">2</button>
      <button class="number" id="3" bindtap="pressNum">3</button>
      <button class="operator" id="+" bindtap="pressOper">+</button>
    </view>
  
    <view class="row">
      <button class="number large" id="0" bindtap="pressNum">0</button>
      <button class="number" bindtap="backspace">←</button>
      <button class="operator" bindtap="getRes">=</button>
    </view>

  </view>
</view>